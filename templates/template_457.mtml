<div id="widget-area" class="widget-area" role="complementary">

<aside id="search" class="widget widget_search">
<form method="get" class="search-form" action="http://www.movabletype.host/cgi-bin/mt/mt-search.cgi">
<span class="screen-reader-text">搜索：</span>
        <input type="text" name="search" value="" placeholder="搜索...">
        <input type="hidden" name="IncludeBlogs" value="4">
        <input type="hidden" name="limit" value="20">
		<input type="submit" class="search-submit screen-reader-text" value="搜索" />
</form>
</aside>		

<aside id="recent-posts" class="widget widget_recent_entries"><h2 class="widget-title">近期文章</h2>
<mt:If tag="BlogEntryCount">
  <mt:Entries lastn="10">
    <mt:EntriesHeader>
    <ul>
    </mt:EntriesHeader>
      <li><a href="<$mt:EntryPermalink$>"><$mt:EntryTitle$></a></li>
    <mt:EntriesFooter>
    </ul>
    </mt:EntriesFooter>
  </mt:Entries>
</mt:If>		
</aside>
		
