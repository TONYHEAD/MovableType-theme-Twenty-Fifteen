<mt:IfArchiveTypeEnabled archive_type="Monthly">
    <mt:ArchiveList archive_type="Monthly">
        <mt:ArchiveListHeader>
<aside id="archives" class="widget widget_archive"><h2 class="widget-title"><$mt:ArchiveTypeLabel$> 文章归档</h2>	
    <ul>
        </mt:ArchiveListHeader>
      <li><a href="<$mt:ArchiveLink encode_html="1"$>"><$mt:ArchiveTitle$></a></li>
        <mt:ArchiveListFooter>
    </ul>
        </mt:ArchiveListFooter>
    </mt:ArchiveList>
</aside>
</mt:IfArchiveTypeEnabled>

<mt:IfArchiveTypeEnabled archive_type="Category">
  <mt:If tag="BlogCategoryCount">
<aside id="categories" class="widget widget_categories">
  <h2 class="widget-title">分类目录</h2>
    <mt:TopLevelCategories>
      <mt:SubCatIsFirst>
    <ul>
      </mt:SubCatIsFirst>
      <mt:If tag="CategoryCount">
      <li class="cat-item cat-item-<$mt:CategoryLabel$>"><a href="<$mt:CategoryArchiveLink$>"<mt:If tag="CategoryDescription"> title="<$mt:CategoryDescription remove_html="1" encode_html="1"$>"</mt:If>><$mt:CategoryLabel$></a>
      <mt:Else>
      <li class="cat-item cat-item-<$mt:CategoryLabel$>"><$mt:CategoryLabel$>
      </mt:If>
      <$mt:SubCatsRecurse$>
      </li>
      <mt:SubCatIsLast>
    </ul>
      </mt:SubCatIsLast>
    </mt:TopLevelCategories>
  </mt:If>
</aside>
</mt:IfArchiveTypeEnabled>

<aside id="meta" class="widget widget_meta"><h2 class="widget-title">功能</h2>			
<ul>
	<li><a href="/atom.xml">文章<abbr title="Really Simple Syndication">RSS</abbr></a></li>
	<li><a href="https://www.movabletype.host/" title="基于MovableType，一个强壮、先进的信息管理系统。">MovableType</a></li>		
</ul>
</aside>			
</div><!-- .widget-area -->